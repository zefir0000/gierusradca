          <option value="PRAWO ADMINISTRACYJNE" <%= section === 'PRAWO ADMINISTRACYJNE' ? 'selected' : '' %>>PRAWO ADMINISTRACYJNE</option>
          <option value="ODSZKODOWANIA" <%= section === 'ODSZKODOWANIA' ? 'selected' : '' %>>ODSZKODOWANIA</option>
          <option value="PRAWO HANDLOWE" <%= section === 'PRAWO HANDLOWE' ? 'selected' : '' %>>PRAWO HANDLOWE</option>

        </select><br>
        <label for="title">Tytuł strony:</label><br>
        <input type="text" id="title" name="title" value="<%= title %>" required style="width: 99%; padding: 10px 0px" />
        <br><br>

<br><br>
  <input type="text" name="image" value="<%= image %>" >

        <label for="content">Treść strony:</label>
        <div id="editor">
            <%= content %>
        </div>
        <button type="button" id="toggleTextarea">Show original HTML</button>
        <textarea id="content" name="content" rows="10" required style="display: none;"></textarea>

        <br><br>
        <button type="submit">Dodaj Stronę</button>
      </form>
    </div>
</body>

