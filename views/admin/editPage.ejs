      <form action="/admin/update-page" method="post" style="display: block; width: 90%" id="uploadForm" >
        <label for="sectionSelect">Wybierz sekcję:</label>
        <select id="sectionSelect" name="section" value="<%= section %>" required>
          <option value="PRAWO BANKOWE" <%= section === 'PRAWO BANKOWE' ? 'selected' : '' %>>PRAWO BANKOWE</option>
          <option value="PRAWO RODZINNE" <%= section === 'PRAWO RODZINNE' ? 'selected' : '' %>>PRAWO RODZINNE</option>
