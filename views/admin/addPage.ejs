<!DOCTYPE html>
<html>

<head>
  <link rel="stylesheet" href="../css/style.css">
  <link href="/css/quill.snow.css" rel="stylesheet">
	<link rel="stylesheet" href="/css/base.css">
	<link rel="stylesheet" href="/css/vendor.css">
	<link rel="stylesheet" href="/css/main2.css">
  <title>
    <%= title %>
  </title>
  <style>
    body {
      background-color: #f5f5f5 !important;
    }
    .active {
      font-weight: bold;
    }
  </style>
</head>

<body>
    <div class="main-content">
      <h1>
        <%= title %>
      </h1>

      <form action="/admin/page" method="post" style="display: block; width: 90%" id="uploadForm" enctype="multipart/form-data">
        <label for="sectionSelect">Wybierz sekcję:</label>
      <select id="sectionSelect" name="section" id="section">
          <option value="PRAWO BANKOWE">PRAWO BANKOWE</option>
          <option value="PRAWO RODZINNE">PRAWO RODZINNE</option>
          <option value="PRAWO SPADKOWE">PRAWO SPADKOWE</option>
          <option value="PRAWO CYWILNE">PRAWO CYWILNE</option>
          <option value="PRAWO PRACY">PRAWO PRACY</option>
          <option value="PRAWO ADMINISTRACYJNE">PRAWO ADMINISTRACYJNE</option>
          <option value="ODSZKODOWANIA">ODSZKODOWANIA</option>
          <option value="PRAWO HANDLOWE">PRAWO HANDLOWE</option>
          <option value="PRAWO KARNE">PRAWO KARNE</option>
      </select>

        <label for="title">Tytuł strony:</label>
        <input type="text" id="title" name="title" required style="width: 99%; padding: 10px 0px" />

        <input type="file" id="fileInput" name="image" accept="image/*">

        <label for="content">Treść strony:</label>
        <div id="editor">
          <p>Hello World!</p>
          <p>Some initial <strong>bold</strong> text</p>
          <p><br></p>
        </div>
        <button type="button" id="toggleTextarea">Show original HTML</button>
        <textarea id="content" name="content" rows="10" required style="display: none;"></textarea>

        <label for="publishDate">Data publikacji:</label>
        <input type="date" id="publishDate" name="publishDate" >

        <br><br>
        <button type="submit" id="submitBtn">Dodaj Stronę</button>
      </form>
      <!-- Loader overlay -->
      <div id="loaderOverlay" aria-live="polite" aria-busy="true" style="display:none;">
        <div class="loader-box">
          <div class="spinner"></div>
          <div class="loader-text">Trwa dodawanie strony...</div>
        </div>
      </div>
    </div>
  </body>

</html>
<script src="/js/quill.js"></script>
<script src="/js/quill-config.js"></script>

<script>
  document.getElementById("uploadForm").addEventListener("submit", async function (event) {
    event.preventDefault();

    const formData = new FormData(this);
    // show loader and disable submit
    const overlay = document.getElementById('loaderOverlay');
    const submitBtn = document.getElementById('submitBtn');
    if (overlay) overlay.style.display = 'flex';
    if (submitBtn) { submitBtn.disabled = true; submitBtn.textContent = 'Przetwarzanie...'; }

    try {
        const response = await fetch("/admin/page", {
            method: "POST",
            body: formData
        });
        if (!response.ok) {
          throw new Error(`HTTP ${response.status}`);
        }
        const result = await response.json();
        if (result.redirectUrl) {
            setTimeout(() => { window.location.href = result.redirectUrl; }, 2000);
        } else {
            alert("Plik i dane zostały wysłane.");
            if (overlay) overlay.style.display = 'none';
            if (submitBtn) { submitBtn.disabled = false; submitBtn.textContent = 'Dodaj Stronę'; }
        }
    } catch (error) {
        console.error("Błąd przesyłania:", error);
        alert("Wystąpił błąd podczas dodawania strony. Spróbuj ponownie.");
        if (overlay) overlay.style.display = 'none';
        if (submitBtn) { submitBtn.disabled = false; submitBtn.textContent = 'Dodaj Stronę'; }
    }
});

  var quill = new Quill('#editor');

  var toggleButton = document.getElementById('toggleTextarea');
  var textarea = document.getElementById('content');

  toggleButton.addEventListener('click', function () {
    if (textarea.style.display === 'none') {
      textarea.style.display = 'block';
      quill.container.style.display = 'none';
    } else {
      textarea.style.display = 'none';
      quill.container.style.display = 'block';
    }
  });
  quill.on('text-change', function (delta, oldDelta, source) {
    if (source === 'user') {
      textarea.value = quill.root.innerHTML;
    }
  });

  textarea.value = quill.root.innerHTML;
</script>
<style>
  #editor {
    min-height: 400px;
  }

  #content {
    height: 400px;
    width: 100%;
  }
  #sectionSelect {
  padding: 10px;
  font-size: 16px;
  width: 100%;
  border: 1px solid #ccc;
  border-radius: 5px;
  background-color: #fff;
}

#sectionSelect option {
  padding: 10px;
  font-size: 16px;
  background-color: #fff;
  color: #333;
}
#sectionSelect option:hover {
  background-color: #f5f5f5;
  cursor: pointer;
}
  /* Loader overlay styles */
  #loaderOverlay {
    position: fixed;
    inset: 0;
    background: rgba(255,255,255,0.85);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }
  .loader-box { display: flex; flex-direction: column; align-items: center; gap: 12px; color: #012;
    padding: 24px 28px; background: #fff; border: 1px solid #e5e7eb; border-radius: 10px; box-shadow: 0 10px 25px rgba(0,0,0,0.08); }
  .spinner {
    width: 36px; height: 36px; border: 4px solid #e5e7eb; border-top-color: #1f73b7; border-radius: 50%;
    animation: spin 1s linear infinite;
  }
  .loader-text { font-weight: 600; color: #0b2a4a; }
  @keyframes spin { to { transform: rotate(360deg); } }
</style>